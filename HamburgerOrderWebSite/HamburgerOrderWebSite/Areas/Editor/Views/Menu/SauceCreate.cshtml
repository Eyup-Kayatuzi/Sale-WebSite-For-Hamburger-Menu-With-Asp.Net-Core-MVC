@model HamburgerOrderWebSite.ViewModels.ForEditor.CreateSauceVM

@{
    ViewData["Title"] = "Sos Oluştur";
}
@{
    if (User.IsInRole("Editör"))
    {
        Layout = "~/Areas/Editor/Views/Shared/EditorTemplate.cshtml";
    }
    else
    {
        Layout = "~/Areas/Admin/Views/Shared/AdminTemplate.cshtml";
    }
}
<hr />
<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-lg-7">
                <div class="p-5">
                    <form asp-action="SauceCreate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="SauceName" class="control-label"></label>
                            <input asp-for="SauceName" class="form-control" />
                            <span asp-validation-for="SauceName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="control-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kaydet" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
